<Controls:MetroWindow x:Class="FileManager.ConfirmWindow"
  xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"      
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager"
        mc:Ignorable="d"
                      ShowIconOnTitleBar="False"
                      ShowSystemMenuOnRightClick="False"
                      ShowMinButton="False"
                      ShowCloseButton="False"
                      ResizeMode="NoResize"
        Title="Confirm" Height="150" MaxHeight="200" Width="250">
    <StackPanel>
        <TextBlock Padding="20" TextWrapping="Wrap" x:Name="delName"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="0 0 10 0" Width="60" Click="Yes_Click">
                <TextBlock Text="Удалить" Foreground="Lime"/>
            </Button>
            <Button Width="60" Click="Cancel_Click">
                <TextBlock Text="Отмена" Foreground="DarkRed"/>
            </Button>
        </StackPanel>

    </StackPanel>
</Controls:MetroWindow>
